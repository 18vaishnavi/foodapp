<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context="fragment.ProfileFragment">

    <ImageView
        android:id="@+id/imgprofilelogoo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/pro"
        android:outlineProvider="background" />

    <ImageView
        android:id="@+id/iconname"
        android:layout_width="78dp"
        android:layout_height="35dp"
        android:layout_below="@+id/imgprofilelogoo"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_profile" />

    <TextView
        android:id="@+id/txtusername"
        android:text="satyam_suryawnshi"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgprofilelogoo"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="62dp"
        android:layout_toRightOf="@+id/iconname"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgcall"
        android:layout_width="78dp"
        android:layout_height="35dp"
        android:layout_below="@+id/iconname"
        android:layout_marginTop="60dp"
        android:src="@drawable/pro" />

    <TextView
        android:id="@+id/contact"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtusername"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="62dp"
        android:text="9131480982"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/imgcall"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgmail"
        android:layout_width="78dp"
        android:layout_height="35dp"
        android:layout_below="@+id/imgcall"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_profile" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="48dp"

        android:layout_below="@+id/contact"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="80dp"
        android:layout_toRightOf="@+id/imgmail"
        android:text="satyamsurya1997@gmail.com"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>